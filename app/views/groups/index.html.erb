<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="col-md-3">
   <%= render "users/user_info",user: @user %>
   <h1>New Book</h1>
<%= render "books/new",book: @book %>
  </div>
 <div class="col-md-8 offset-md-1">
  <% @genre_list.each do |list| %>
  <i class="fa-sharp fa-solid fa-tag"></i>
<%= link_to list.genre_name,search_genre_path(genre_id: list.id) %>
(<%= list.group_genres.count %>)
<% end %>
   <h1>Groups</h1>
   <table class="table">
     <tr>
       <th>Image</th>
       <th>Group Name</th>
       <th>Owner Name</th>
       <th>Member</th>
       <th>Wait</th>
       <th>Created</th>

     </tr>
     <% @groups.each do |group| %>
     <tr>
       <td><%= image_tag group.get_group_image(100,100) %></td>
       <td><%= link_to group.name,group_path(group.id) %></td>
       <td><%= link_to group.user.name,user_path(group.user_id) %></td>
       <td><%= group.group_users.count+1 %>äºº</td>
       <td><%= group.permits.count %></td>
       <td><%= group.created_at.strftime('%Y/%m/%d') %></td>
     </tr>
     <% end %>
   </table>
 </div>
 </div>
</div>