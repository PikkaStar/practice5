<div class="container">
<div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
<h1>Editing book</h1>
<% if @book.errors.any? %>
<%= @book.errors.count %>errors
<% @book.errors.full_messages.each do |message| %>
<li>
  <%= message %>
</li>
<% end %>
<% end %>
<%= form_with model: @book do |f| %>
<%= f.label :title %><br>
<%= f.text_field :title,autofocus: true,class: "form-control" %><br>
<%= f.label :body,"Opinion" %><br>
<%= f.text_area :body,class: "form-control" %><br>

<label>タグ(,で区切ると複数タグ登録できます)</label>
<%= f.text_field :name,value: @tag_list, class: 'form-control' %>
<% if @book.new_record? %>
  <%= f.submit '新規作成', class: "btn btn-success mt-4" %>
<% else %>
  <%= f.submit '更新する', class: "btn btn-success mt-4" %>
<% end %>
<% end %>
</div>
</div>
</div>