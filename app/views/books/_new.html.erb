<% if book.errors.any? %>
<%= book.errors.count %>errors
<% book.errors.full_messages.each do |message| %>
<li>
  <%= message %>
</li>
<% end %>
<% end %>
<%= form_with model: book do |f| %>
<%= f.label :title %><br>
<%= f.text_field :title,autofocus: true,class: "form-control" %><br>
<%= f.label :body,"Opinion" %><br>
<%= f.text_area :body,class: "form-control" %><br>

<label>タグ(,で区切ると複数タグ登録できます)</label>
<%= f.text_field :name,class: "form-control" %>

<%= f.submit %>

<% end %>