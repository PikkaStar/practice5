<div class="container px-5 px-sm-0">
<div class="row">
  <div class="col-md-3">
<%= render "users/user_info",user: @user %>
<h1>New Book</h1>
<%= render "new",book: @book %>
</div>
<div class="col-md-8 offset-md-1">
<h1>Books</h1>
<table class="table table-striped">
  <tr>
    <th>Image</th>
    <th>Name</th>
    <th>Title</th>
    <th>Opinion</th>
    <th>Favorite</th>
  </tr>
  <% @books.each do |book| %>
  <tr>
    <td><%= image_tag book.user.get_profile_image(100,100) %></td>
    <td><%= link_to book.user.name,user_path(book.user.id) %></td>
    <td><%= link_to book.title,book_path(book.id) %></td>
    <td><%= book.body %></td>
    <% if book.favorited_by?(current_user) %>
    <td><%= link_to book_favorite_path(book.id),method: :delete do %>♥<%= book.favorites.count %>いいね<% end %></td>
    <% else %>
    <td><%= link_to book_favorite_path(book.id),method: :post do %>♡<%= book.favorites.count %>いいね<% end %></td>
    <% end %>
  </tr>
  <% end %>
</table>
</div>
</div>
</div>