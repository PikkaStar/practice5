<div class="container px-5 px-sm-0">
<div class="row">
  <div class="col-md-3">
<%= render "user_info",user: @user,isRoom: @isRoom,room: @room,entry: @entry,roomId: @roomId %>
<h1>New Book</h1>
<%= render "books/new",book: @book %>
</div>
<div class="col-md-8 offset-md-1">
<h1>Books</h1>
<table class="table table-striped">
  <tr>
    <th>Image</th>
    <th>Title</th>
    <th colspan="2"></th>
  </tr>
  <% @books.each do |book| %>
  <tr>
    <td><%= image_tag book.user.get_profile_image(100,100) %></td>
    <td><%= link_to book.title,book_path(book.id) %></td>
    <td>コメント:<%= book.book_comments.count %></td>
    <td>いいね:<%= book.favorites.count %></td>
  </tr>
  <% end %>
</table>
</div>
</div>
</div>